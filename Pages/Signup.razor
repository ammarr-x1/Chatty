@page "/signup"
@inject NavigationManager NavigationManager
@inject Chatty.Services.AuthService AuthService
@inject Chatty.Services.UserSession UserSession

<style>
    /* Sharing the same premium design system */
    .signup-root {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
        position: relative;
        overflow: hidden;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    .shape {
        position: absolute;
        filter: blur(60px);
        z-index: 0;
        animation: float 25s infinite;
    }
    .shape-1 {
        top: -10%;
        right: -10%;
        width: 550px;
        height: 550px;
        background: rgba(161, 140, 209, 0.4);
        border-radius: 50%;
    }
    .shape-2 {
        bottom: -15%;
        left: -5%;
        width: 450px;
        height: 450px;
        background: rgba(251, 194, 235, 0.5);
        border-radius: 40% 60% 60% 40%;
        animation-delay: -7s;
    }

    @@keyframes float {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        50% { transform: translate(20px, 20px) rotate(5deg); }
    }

    .signup-card-glass {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 24px;
        box-shadow: 0 10px 40px 0 rgba(0, 0, 0, 0.1);
        padding: 2.5rem 3rem;
        width: 100%;
        max-width: 450px;
        position: relative;
        z-index: 10;
        animation: popIn 0.5s cubic-bezier(0.18, 0.89, 0.32, 1.28);
    }

    @@keyframes popIn {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
    }

    .signup-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .signup-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); /* Matching bg but darker maybe? */
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        width: 100%;
        padding: 1rem 1rem 1rem 3rem;
        border: 2px solid #f0f0f5;
        border-radius: 12px;
        background: #fafafa;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
        color: #333;
        margin-bottom: 1rem;
    }

    .form-control-custom:focus {
        border-color: #a18cd1;
        background: #fff;
        box-shadow: 0 0 0 4px rgba(161, 140, 209, 0.2);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 1.1rem; /* Adjusted for margin */
        color: #bbb;
        font-size: 1.1rem;
        pointer-events: none;
        z-index: 2;
    }

    .form-control-custom {
        position: relative;
        z-index: 1;
    }

    .btn-register {
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        background-size: 200% auto;
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 15px rgba(37, 117, 252, 0.25);
        margin-top: 1rem;
    }

    .btn-register::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: 0.5s;
    }

    .btn-register:hover:not(:disabled) {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 8px 25px rgba(37, 117, 252, 0.4);
        background-position: right center;
    }

    .btn-register:hover::after {
        left: 100%;
        transition: 0.5s;
    }
    
    .btn-register:active:not(:disabled) {
        transform: translateY(-1px) scale(0.98);
        box-shadow: 0 4px 12px rgba(37, 117, 252, 0.3);
    }

    .btn-register:disabled {
        background: #a0aec0;
        cursor: not-allowed;
        box-shadow: none;
        opacity: 0.7;
    }

    .spinner {
        width: 1.2rem;
        height: 1.2rem;
        border: 2px solid #fff;
        border-top-color: transparent;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        display: inline-block;
        vertical-align: middle;
        margin-right: 0.5rem;
    }
    @@keyframes spin { to { transform: rotate(360deg); } }

    .alert-box {
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .alert-error {
        background: #fff0f0;
        color: #d63031;
        border: 1px solid #fab1a0;
    }
    .alert-success {
        background: #e3fadc;
        color: #27ae60;
        border: 1px solid #b8e994;
    }

</style>

<div class="signup-root">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>

    <div class="signup-card-glass">
        <div class="signup-header">
            <h1 class="signup-title">Join Chatty</h1>
            <p style="color: #777;">Create your account for free</p>
        </div>

        @if (showError)
        {
            <div class="alert-box alert-error">
                <span>‚ö†Ô∏è</span> <span>@errorMessage</span>
            </div>
        }
        
        @if (showSuccess)
        {
            <div class="alert-box alert-success">
                <span>‚úÖ</span> <span>Account created! Redirecting...</span>
            </div>
        }

        <div class="signup-form">
            <div class="input-wrapper">
                <input @bind="username" 
                       type="text" 
                       class="form-control-custom" 
                       placeholder="Choose a username"
                       disabled="@isLoading" />
                <span class="input-icon">üë§</span>
            </div>

            <div class="input-wrapper">
                <input @bind="password" 
                       type="password" 
                       class="form-control-custom" 
                       placeholder="Create password"
                       disabled="@isLoading" />
                <span class="input-icon">üîí</span>
            </div>

            <div class="input-wrapper">
                <input @bind="confirmPassword" 
                       type="password" 
                       class="form-control-custom" 
                       placeholder="Confirm password"
                       disabled="@isLoading" />
                <span class="input-icon">üîê</span>
            </div>

            <button class="btn-register" @onclick="Register" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                    <span>Creating...</span>
                }
                else
                {
                    <span>Sign Up</span>
                }
            </button>
        </div>

        <div style="text-align: center; margin-top: 1.5rem;">
            <span style="color: #666;">Already have an account? </span>
            <a href="login" style="color: #2575fc; font-weight: 600; text-decoration: none;">Log In</a>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string confirmPassword = "";
    private bool showError = false;
    private string errorMessage = "";
    private bool showSuccess = false;
    private bool isLoading = false;

    private async Task Register()
    {
        showError = false;
        showSuccess = false;
        isLoading = true;

        await Task.Delay(1000); // Simulate network

        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password)) {
             showError = true;
             errorMessage = "Please fill in all fields.";
             isLoading = false;
             return;
        }

        if (password != confirmPassword) {
            showError = true;
            errorMessage = "Passwords do not match.";
            isLoading = false;
            return;
        }

        // Call proper AuthService
        try 
        {
            var user = await AuthService.RegisterAsync(username, password);
            if (user != null)
            {
                showSuccess = true;
                await Task.Delay(1000);
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                showError = true;
                errorMessage = "Username already exists.";
                isLoading = false;
            }
        }
        catch (Exception ex)
        {
            showError = true;
            errorMessage = ex.Message;
            isLoading = false;
        }
    }
}

@code {
    [SupplyParameterFromQuery]
    public string? room { get; set; }

    [SupplyParameterFromQuery]
    public string? username { get; set; }

    private HubConnection? hubConnection;
    private string roomCode = "";
    private GameState? gameState;
    private PlayerState? currentPlayer;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(room))
        {
            Navigation.NavigateTo("/");
            return;
        }

        roomCode = room;

        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/gamehub"), options => {
                options.HttpMessageHandlerFactory = handler => {
                    if (handler is HttpClientHandler clientHandler)
                    {
                        clientHandler.ServerCertificateCustomValidationCallback = (message, cert, chain, errors) => true;
                    }
                    return handler;
                };
            })
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<GameState>("GameStateUpdated", (state) =>
        {
            gameState = state;
            if (hubConnection?.ConnectionId != null)
            {
                currentPlayer = state.Players.GetValueOrDefault(hubConnection.ConnectionId);
            }
            InvokeAsync(StateHasChanged);
        });

        hubConnection.On<string>("GameEnded", (winner) =>
        {
            InvokeAsync(StateHasChanged);
        });

        try
        {
            await hubConnection.StartAsync();
            if (hubConnection.State == HubConnectionState.Connected)
            {
                var state = await hubConnection.InvokeAsync<GameState>("ReconnectToGame", roomCode, username ?? "Unknown");
                if (state != null)
                {
                    gameState = state;
                    if (hubConnection?.ConnectionId != null)
                    {
                        currentPlayer = state.Players.GetValueOrDefault(hubConnection.ConnectionId);
                    }
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error connecting/reconnecting: {ex.Message}");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("setupKeyboardControls", DotNetObjectReference.Create(this));
        }
    }

    [JSInvokable]
    public async Task HandleKeyPress(string direction)
    {
        if (hubConnection?.State == HubConnectionState.Connected && gameState?.Status == GameStatus.InProgress)
        {
            await hubConnection.SendAsync("SetDirection", direction);
        }
    }

    private bool IsVisible(Position pos, Position playerPos, int radius)
    {
        var distance = Math.Sqrt(Math.Pow(pos.X - playerPos.X, 2) + Math.Pow(pos.Y - playerPos.Y, 2));
        return distance <= radius;
    }

    private PlayerState? GetPlayerAtPosition(Position pos)
    {
        return gameState?.Players.Values.FirstOrDefault(p => 
            p.Position.X == pos.X && p.Position.Y == pos.Y && p.IsAlive);
    }

    private string GetCellClass(CellType cellType, bool isVisible, PlayerState? player)
    {
        var classes = new List<string>();

        if (cellType == CellType.Wall)
            classes.Add("wall");
        else if (cellType == CellType.Food)
            classes.Add("food");
        else
            classes.Add("empty");

        if (!isVisible)
            classes.Add("fog");

        return string.Join(" ", classes);
    }

    private void ReturnToLobby()
    {
        Navigation.NavigateTo("/home");
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (hubConnection is not null)
            {
                await hubConnection.DisposeAsync();
            }
            await JS.InvokeVoidAsync("cleanupKeyboardControls");
        }
        catch (InvalidOperationException)
        {
            // JS runtime not available during prerendering or disconnection
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error during disposal: {ex.Message}");
        }
    }
}

@page "/game"
@using Microsoft.AspNetCore.SignalR.Client
@using PacmanMultiplayer.Models
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IAsyncDisposable

<PageTitle>Game - Pacman Multiplayer</PageTitle>

<div class="game-container">
    <div class="game-sidebar">
        <div class="game-header">
            <h2>üéÆ Pacman Chase</h2>
            <div class="room-info">Room: @roomCode</div>
        </div>

        <div class="game-stats">
            <div class="stat-card">
                <div class="stat-label">Food Remaining</div>
                <div class="stat-value">@(gameState?.RemainingFood ?? 0)</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Your Role</div>
                <div class="stat-value role-@currentPlayer?.Role.ToString().ToLower()">
                    @currentPlayer?.Role
                </div>
            </div>
        </div>

        <div class="players-panel">
            <h3>Players</h3>
            @if (gameState != null)
            {
                @foreach (var player in gameState.Players.Values)
                {
                    <div class="player-item @(player.IsAlive ? "alive" : "dead")">
                        <div class="player-dot" style="background-color: @player.Color"></div>
                        <div class="player-details">
                            <span class="player-name">@player.Username</span>
                            @if (!player.IsAlive)
                            {
                                <span class="dead-badge">üíÄ</span>
                            }
                        </div>
                        @if (player.Role == PlayerRole.Runner)
                        {
                            <div class="player-score">@player.Score</div>
                        }
                    </div>
                }
            }
        </div>

        @if (gameState?.Status == GameStatus.RunnersWin || gameState?.Status == GameStatus.ChasersWin)
        {
            <div class="game-over-panel">
                <h2>üéâ Game Over!</h2>
                <p class="winner">
                    @(gameState.Status == GameStatus.RunnersWin ? "Runners Win!" : "Chasers Win!")
                </p>
                <button class="btn btn-primary" @onclick="ReturnToLobby">
                    Return to Lobby
                </button>
            </div>
        }

        <div class="controls-info">
            <h4>Controls</h4>
            <div class="key-grid">
                <kbd>W</kbd><kbd>‚Üë</kbd>
                <kbd>A</kbd><kbd>‚Üê</kbd>
                <kbd>S</kbd><kbd>‚Üì</kbd>
                <kbd>D</kbd><kbd>‚Üí</kbd>
            </div>
        </div>
    </div>

    <div class="game-board-container">
        <div class="game-board" style="grid-template-columns: repeat(@(gameState?.Map.Width ?? 30), 20px); grid-template-rows: repeat(@(gameState?.Map.Height ?? 19), 20px);">
            @if (gameState != null && currentPlayer != null)
            {
                @for (int y = 0; y < gameState.Map.Height; y++)
                {
                    @for (int x = 0; x < gameState.Map.Width; x++)
                    {
                        var pos = new Position(x, y);
                        var cellType = gameState.Map.GridData[y][x];
                        var isVisible = IsVisible(pos, currentPlayer.Position, currentPlayer.VisionRadius);
                        var playerHere = GetPlayerAtPosition(pos);

                        <div class="cell @GetCellClass(cellType, isVisible, playerHere)">
                            @if (isVisible)
                            {
                                @if (playerHere != null)
                                {
                                    <div class="player-sprite" style="background-color: @playerHere.Color">
                                        @if (playerHere.Role == PlayerRole.Runner)
                                        {
                                            <span class="sprite-icon">üü°</span>
                                        }
                                        else
                                        {
                                            <span class="sprite-icon">üëª</span>
                                        }
                                    </div>
                                }
                                else if (cellType == CellType.Food)
                                {
                                    <div class="food-dot"></div>
                                }
                            }
                        </div>
                    }
                }
            }
            else
            {
                <div class="game-loading">
                    <div class="spinner"></div>
                    <h2>Initializing Game State...</h2>
                    <p>Room: @roomCode | User: @username</p>
                    @if (hubConnection?.State == HubConnectionState.Connected)
                    {
                        <p class="status-success">Connected to Hub</p>
                    }
                    else
                    {
                        <p class="status-warning">Connection State: @hubConnection?.State</p>
                    }
                </div>
            }
        </div>
    </div>
</div>


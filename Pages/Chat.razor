@page "/chat/{RoomCode}"
@inject NavigationManager NavigationManager
@inject Chatty.Services.ChatService ChatService
@inject Chatty.Services.UserSession UserSession
@implements IDisposable

<style>
    .chat-layout {
        height: calc(100vh - 4rem); /* Adjust based on navbar if any, ideally 100vh */
        background: #f4f7f6;
        display: flex;
        overflow: hidden;
    }

    .room-sidebar {
        width: 300px;
        background: white;
        border-right: 1px solid #e0e0e0;
        display: flex;
        flex-direction: column;
        z-index: 10;
        box-shadow: 2px 0 10px rgba(0,0,0,0.05);
    }

    .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: #f8f9fa;
        position: relative;
    }

    .chat-header {
        height: 70px;
        background: white;
        border-bottom: 1px solid #e0e0e0;
        display: flex;
        align-items: center;
        padding: 0 2rem;
        justify-content: space-between;
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
    }

    .chat-header-title {
        font-weight: 700;
        font-size: 1.25rem;
        color: #333;
        display: flex;
        align-items: center;
    }

    .room-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8rem;
        margin-left: 10px;
    }

    .messages-container {
        flex: 1;
        overflow-y: auto;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .message-wrapper {
        display: flex;
        flex-direction: column;
        max-width: 70%;
        animation: fadeIn 0.3s ease;
    }

    .message-wrapper.mine {
        align-self: flex-end;
        align-items: flex-end;
    }

    .message-wrapper.theirs {
        align-self: flex-start;
        align-items: flex-start;
    }

    .message-bubble {
        padding: 12px 18px;
        border-radius: 18px;
        position: relative;
        font-size: 0.95rem;
        line-height: 1.5;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .message-wrapper.mine .message-bubble {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom-right-radius: 4px;
    }

    .message-wrapper.theirs .message-bubble {
        background: white;
        color: #444;
        border-bottom-left-radius: 4px;
    }

    .message-info {
        font-size: 0.75rem;
        color: #999;
        margin-top: 4px;
        padding: 0 4px;
    }

    .chat-input-area {
        background: white;
        padding: 1.5rem 2rem;
        border-top: 1px solid #e0e0e0;
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .chat-input {
        background: #f4f7f6;
        border: 2px solid transparent;
        border-radius: 25px;
        padding: 12px 20px;
        flex: 1;
        transition: all 0.3s ease;
    }

    .chat-input:focus {
        background: white;
        border-color: #764ba2;
        box-shadow: 0 0 0 4px rgba(118, 75, 162, 0.1);
        outline: none;
    }

    .btn-send {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(118, 75, 162, 0.3);
    }

    .btn-send:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(118, 75, 162, 0.4);
    }

    .btn-back {
        color: #666;
        text-decoration: none;
        display: flex;
        align-items: center;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .btn-back:hover {
        color: #333;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

@if (string.IsNullOrEmpty(UserSession.Username))
{
    <div class="alert alert-warning m-5">
        Please login to chat. <a href="/">Login</a>
    </div>
}
else
{
    <div class="chat-layout">
        <!-- Sidebar -->
        <div class="room-sidebar p-4 d-none d-md-flex">
            <h5 class="fw-bold mb-4">Room Details</h5>
            <div class="card border-0 bg-light mb-3">
                <div class="card-body p-3">
                    <small class="text-muted d-block mb-1">Room Code</small>
                    <strong class="d-flex align-items-center">
                        @RoomCode 
                        <span class="badge bg-success ms-2" style="font-size: 0.6rem">LIVE</span>
                    </strong>
                </div>
            </div>

            <h6 class="text-uppercase text-muted small fw-bold mt-4 mb-3">Current User</h6>
            <div class="d-flex align-items-center">
                <div class="bg-primary rounded-circle text-white d-flex align-items-center justify-content-center me-2" 
                     style="width: 32px; height: 32px; font-weight: bold;">
                    @UserSession.Username.Substring(0,1).ToUpper()
                </div>
                <span>@UserSession.Username</span>
            </div>
            
            <div class="mt-auto">
                 <a href="/home" class="btn btn-outline-secondary w-100 rounded-pill">
                    ← Back to Dashboard
                 </a>
            </div>
        </div>

        <!-- Main Chat -->
        <div class="chat-main">
            <!-- Header -->
            <div class="chat-header">
                <div class="chat-header-title">
                    <a href="/home" class="d-md-none me-3 btn-back">←</a>
                    Chat Room
                    <span class="room-badge">@RoomCode</span>
                </div>
            </div>

            <!-- Messages -->
            <div class="messages-container" id="messagesList">
                @foreach (var msg in messages)
                {
                    bool isMine = msg.User == UserSession.Username;
                    <div class="message-wrapper @(isMine ? "mine" : "theirs")">
                        <div class="message-bubble">
                            @if (!isMine) {
                                <div style="font-weight: 700; font-size: 0.8rem; margin-bottom: 2px;">@msg.User</div>
                            }
                            @msg.Message
                        </div>
                        <div class="message-info">
                            @msg.Timestamp.ToString("HH:mm")
                        </div>
                    </div>
                }
            </div>

            <!-- Input -->
            <div class="chat-input-area">
                <input @bind="newMessage" 
                       @bind:event="oninput"
                       @onkeypress="HandleKeyPress"
                       type="text" 
                       class="chat-input" 
                       placeholder="Type your message..." />
                
                <button class="btn-send" @onclick="Send">
                     <span>➤</span>
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string RoomCode { get; set; }

    private List<Chatty.Services.ChatMessage> messages = new();
    private string newMessage;
    private bool _disposed = false;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(UserSession.Username))
        {
            NavigationManager.NavigateTo("/");
            return;
        }

        // 1. Load existing messages
        messages = ChatService.GetMessages(RoomCode);

        // 2. Subscribe to Event from Service
        ChatService.OnMessageAdded += HandleMessageAdded;
    }

    private void HandleMessageAdded(string roomCode, Chatty.Services.ChatMessage message)
    {
        if (_disposed) return;

        // Only update if the message belongs to THIS room
        if (roomCode == this.RoomCode)
        {
            InvokeAsync(() => 
            {
                if (_disposed) return;
                messages.Add(message);
                StateHasChanged();
            });
        }
    }

    private void Send()
    {
        if (!string.IsNullOrWhiteSpace(newMessage))
        {
            // Just call the service. The service will add to DB/List AND trigger the event.
            // Our own event handler (above) will then fire and update our UI. 
            // This ensures consistent behavior for sender and receiver.
            ChatService.AddMessage(RoomCode, UserSession.Username, newMessage);

            newMessage = string.Empty;
        }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Send();
        }
    }

    public void Dispose()
    {
        _disposed = true;
        // Important: Unsubscribe to prevent memory leaks!
        if (ChatService != null)
        {
            ChatService.OnMessageAdded -= HandleMessageAdded;
        }
    }
}
